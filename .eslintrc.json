{
  "plugins": ["prettier"],
  "rules": {
    "prefer-template": "error",
    "react/require-extension": "off",
    "prettier/prettier": ["warn", { "singleQuote": true }],
    "max-len": [
      "error",
      {
        "code": 120,
        "ignoreUrls": true,
        "ignoreStrings": true,
        "ignoreComments": true,
        "ignoreTemplateLiterals": true
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".web.js"]
      }
    }
  }
}